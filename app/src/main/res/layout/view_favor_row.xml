<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="1dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_default_elevation"
        android:elevation="@dimen/cardview_default_elevation"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/handshake"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:gravity="center">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="Nome do favor"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textStyle="normal|bold"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce ultrices ornare nulla. In sollicitudin finibus neque, sed feugiat mi aliquam sit amet. Curabitur et dapibus sapien, vestibulum blandit sapien. Sed dignissim quis leo eu tempus. Cras eget turpis rutrum mi finibus venenatis. Mauris ut vestibulum lacus. Vivamus maximus et lorem in dapibus. In sagittis nulla ac lorem dignissim vehicula. Quisque libero magna, facilisis id ultricies ut, iaculis ac lorem. Suspendisse non venenatis elit. Integer scelerisque sem feugiat orci mollis, non congue felis vehicula. Integer tincidunt sagittis ex id placerat. Aenean varius lacinia efficitur."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

